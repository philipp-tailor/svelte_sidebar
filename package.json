{
	"name": "svelte_sidebar",
	"version": "0.0.1",
	"license": "MIT",
	"scripts": {
		"autobuild": "rollup -c -w",
		"build": "yarn clean && rollup -c",
		"clean": "find ./public -type f -name \"*.js\" | xargs rm && find ./public -type f -name \"*.map\" | xargs rm && rm ./public/bundle.css",
		"dev": "yarn clean && yarn start:dev & yarn autobuild",
		"start:dev": "serve"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,css,json,svelte}": [
			"prettier --write",
			"git add"
		]
	},
	"dependencies": {},
	"devDependencies": {
		"husky": ">=4",
		"lint-staged": ">=9",
		"prettier": "^1.19.1",
		"prettier-plugin-packagejson": "^2.0.10",
		"prettier-plugin-svelte": "^0.7.0",
		"rollup": "^1.29.0",
		"rollup-plugin-commonjs": "^10.1.0",
		"rollup-plugin-livereload": "^1.0.1",
		"rollup-plugin-node-resolve": "^5.2.0",
		"rollup-plugin-svelte": "^5.1.1",
		"rollup-plugin-terser": "^5.2.0",
		"rollup-plugin-visualizer": "^3.2.2",
		"serve": "^11.3.0",
		"svelte": "^3.16.7"
	}
}
